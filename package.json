{
  "name": "delta-launcher",
  "version": "0.0.47",
  "description": "launcher for 'delta' minecraft servers",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "author": "Albee",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.4.16",
    "array-unique": "^0.3.2",
    "auto-updater": "^1.0.2",
    "discord-rich-presence": "0.0.8",
    "discord-rpc": "^3.1.4",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.2.2",
    "electron-updater": "^4.3.1",
    "fs-extra": "^9.0.0",
    "get-folder-size": "^2.0.1",
    "hidefile": "^3.0.0",
    "jquery": "3.4.1",
    "jquery-mousewheel": "^3.1.13",
    "keytar": "^6.0.1",
    "malihu-custom-scrollbar-plugin": "^3.1.5",
    "merge-files": "^0.1.2",
    "ps-tree": "^1.2.0",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "update-electron-app": "^1.5.0"
  },
  "devDependencies": {
    "electron": "^18.3.7",
    "electron-builder": "^22.7.0",
    "electron-packager": "^15.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlbeeTheLoli/Delta-Launcher.git"
  },
  "build": {
    "appId": "com.albee.app",
    "productName": "Delta Launcher",
    "target": "nsis",
    "directories": {
      "output": "build"
    },
    "extraResources": [
      "src/res/java/"
    ],
    "win": {
      "publish": {
        "provider": "github"
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "AlbeeTheLoli",
        "repo": "Delta-Launcher"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "prettier": {
    "printWidth": 320,
    "tabWidth": 4,
    "trailingComma": "es5"
  }
}
